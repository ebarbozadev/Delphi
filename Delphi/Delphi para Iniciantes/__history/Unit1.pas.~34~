// Quer dizer o nome do arquivo que você está usando
unit Unit1;

// Sessão aonde é declarado uses, type, variáveis globais
interface

// Indica quais são as outras .pas, classes, arquivos que o formulário está usando
// Se criamos um .pas e queremos utilizar aquela variável, funções em outro arquivo, devemos declarar aqui
uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

// É uma declaração que demonstra um novo tipo de dado, podendo criar mais de um, exemplo:
// type
// TMeuTipo = class
//
// end;
type
  TForm1 = class(TForm)
    edtNome: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
    //Variáveis
    nome : String;
    escrito : String;
    // Vai exibir uma variável na tela
    procedure ExibeVariavel(Nome : Integer);

    // Criando uma função e dizendo o que ela retorna
    function FuncaoExibeVariavel : String;
  public
    { Public declarations }
  end;

// Declarada as variáveis que podem ser acessadas de qualquer lugar ou seja, variáveis globais (não é muito recomendável utilizar variáveis globais)
var
  Form1: TForm1;

// Determina aonde nós vamos começar a implementar nosso código
implementation

// Diretivas de compilação
{$R *.dfm}

// Botão
procedure TForm1.Button1Click(Sender: TObject);
begin
  //escrito := edtNome.Text;
  escrito := FuncaoExibeVariavel;
  // Chamando a variável para que seja possível
  ExibeVariavel(StrToInt(escrito));
end;

procedure TForm1.ExibeVariavel(Nome : Integer);
begin
  // ShowMessage é uma função que escreve algo na tela
  ShowMessage(IntToStr(Nome));
end;

function TForm1.FuncaoExibeVariavel;
begin
  Result := edtNome.Text;
end;

end.
