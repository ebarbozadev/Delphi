unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    edtValor2: TEdit;
    Label1: TLabel;
    edtValor1: TEdit;
    edtResultado: TEdit;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button5Click(Sender: TObject);
  private
    { Private declarations }

    function adicao(valor1, valor2 : Integer) : Integer;
    function subtracao(valor1, valor2 : Integer) : Integer;
    function divisao(valor1, valor2 : Integer) : Integer;
    function multiplicacao(valor1, valor2 : Integer) : Integer;
    function resto(valor1, valor2 : Currency) : Currency;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

// Adição
function TForm1.adicao(valor1: Integer; valor2: Integer): Integer;
begin
  Result := valor1 + valor2;
end;

procedure TForm1.Button1Click(Sender: TObject);
var
  Resultado : Integer;

begin
  Resultado := adicao(StrToInt(edtValor1.Text), StrToInt(edtValor2.Text));
  edtResultado.Text := IntToStr(Resultado);
end;

// Subtração
procedure TForm1.Button2Click(Sender: TObject);
var
  Resultado : Integer;

begin
  Resultado := subtracao(StrToInt(edtValor1.Text), StrToInt(edtValor2.Text));
  edtResultado.Text := IntToStr(Resultado);
end;

function TForm1.subtracao(valor1: Integer; valor2: Integer): Integer;
begin
  Result := valor1 - valor2;
end;

// Multiplicação
function TForm1.multiplicacao(valor1: Integer; valor2: Integer): Integer;
begin
  Result := valor1 * valor2;
end;

procedure TForm1.Button3Click(Sender: TObject);
var
  Resultado : Integer;

begin
  Resultado := multiplicacao(StrToInt(edtValor1.Text), StrToInt(edtValor2.Text));
  edtResultado.Text := IntToStr(Resultado);
end;

// Divisão
function TForm1.divisao(valor1: Integer; valor2: Integer): Integer;
begin
  Result := valor1 div valor2;
end;

procedure TForm1.Button4Click(Sender: TObject);
var
  Resultado : Integer;

begin
  Resultado := divisao(StrToInt(edtValor1.Text), StrToInt(edtValor2.Text));
  edtResultado.Text := IntToStr(Resultado);
end;

// Par ou Impar
procedure TForm1.Button5Click(Sender: TObject);
var
  Resultado : Integer;
begin
  Resultado := resto(StrToInt(edtValor1.Text), StrToInt(edtValor2.Text));
  edtResultado.Text := IntToStr(Resultado);
end;

function TForm1.resto(valor1: Integer; valor2: Integer): Integer;
begin
  Result := valor1 mod valor2;
end;

end.
