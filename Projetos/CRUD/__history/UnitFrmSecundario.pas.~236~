    begin
      edtID.Text := '';
      MessageDlg('Este usuário não está cadastrado', TMsgDlgType.mtError,
        [TMsgDlgBtn.mbOK], 0);
      edtID.Text := '';
      edtIdade.Text := '';
      edtName.Text := '';
    end
    else
    begin
      var
        I: Integer;
        IDProcurado: String;
      begin
        IDProcurado := edtID.Text;
        for I := 0 to Cadastrados.Lines.Count - 1 do
        begin
          if Pos('Id: ' + IDProcurado, Cadastrados.Lines[I]) = 1 then
          begin
            // A linha com o ID procurado foi encontrada
            // Faça algo com o índice encontrado (I)
            Break; // Para interromper o loop após encontrar a linha
          end;
        end;
      end;


